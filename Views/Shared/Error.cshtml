@using MeuSiteMVC.Models
@model ErrorViewModel

@{
    ViewData["Title"] = "Ops! Algo deu errado";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body text-center p-5">
            <h1 class="display-4 text-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i> <!-- Ícone Bootstrap -->
                Erro
            </h1>

            @if (Model == null)
            {
                <p class="lead">
                    Ooops! Ocorreu um erro inesperado, mas não se preocupe.<br />
                    Nosso time já foi notificado e vamos resolver isso o mais breve possível.
                </p>
            }
            else
            {
                <h2 class="mb-3 text-dark">@Html.Raw(Model.Titulo)</h2>
                <p class="text-muted fs-5">@Html.Raw(Model.Mensagem)</p>
            }

            <div class="mt-4">
                <a href="/" class="btn btn-primary px-4">Voltar para a Home</a>
            </div>
        </div>
    </div>
</div>
