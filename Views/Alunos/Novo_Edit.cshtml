@model Aluno

<h4 class="text-center mb-4">Preencha os dados do Aluno</h4>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Edit">

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do aluno" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="DataNascimento" class="form-label">Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Digite o email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="EmailConfirmacao" class="form-label">Confirmar Email</label>
                <input asp-for="EmailConfirmacao" class="form-control" placeholder="Confirme o email" />
                <span asp-validation-for="EmailConfirmacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Avaliacao" class="form-label">Avaliação</label>
                <input asp-for="Avaliacao" class="form-control" placeholder="Digite a avaliação" />
                <span asp-validation-for="Avaliacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Ativo" class="form-label">Ativo</label>
                <div class="form-check">
                    <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" for="Ativo">Está ativo?</label>
                </div>
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

