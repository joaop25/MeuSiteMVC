@model IEnumerable<Aluno>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Avaliacao)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Nome)
                    </td>

                    <td>
                        @Html.DisplayFor(x => item.DataNascimento)
                    </td>

                    <td>
                        @Html.DisplayFor(x => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(x => item.Avaliacao)
                    </td>

                    <td>
                        @Html.DisplayFor(x => item.Ativo)
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    </td>
                </tr>
            }
        }

    </tbody>

</table>