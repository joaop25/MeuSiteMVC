@model Aluno

@{
    ViewData["Title"] = "Cadastrar Aluno";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Preencha os Dados</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="bg-white p-4 rounded shadow-sm">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do aluno" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Digite o email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmailConfirmacao" class="form-label">Confirmação de Email</label>
                    <input asp-for="EmailConfirmacao" class="form-control" placeholder="Confirme o email" />
                    <span asp-validation-for="EmailConfirmacao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Avaliacao" class="form-label">Avaliação</label>
                    <input asp-for="Avaliacao" class="form-control" placeholder="Informe a avaliação" />
                    <span asp-validation-for="Avaliacao" class="text-danger small"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="Ativo" class="form-check-input" />
                    <label class="form-check-label" asp-for="Ativo">
                        Está Ativo?
                    </label>
                    <span asp-validation-for="Ativo" class="text-danger small d-block"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-info btn-lg">Salvar</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            $('form').on('submit', function () {
                var validationSummary = $('.validation-summary-errors');
                if (validationSummary.length > 0) {
                    validationSummary.removeClass('d-none');
                }
            });
        })();
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
