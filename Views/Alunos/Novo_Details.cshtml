@model Aluno

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .details-card {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 20px;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .details-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }

    .details-header {
        margin-bottom: 30px;
        text-align: center;
    }

        .details-header h2 {
            font-weight: bold;
            color: #0d6efd;
        }

    .details-list dt {
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .details-list dd {
        margin-bottom: 20px;
        color: #555;
    }

    .btn-back {
        display: block;
        width: fit-content;
        margin: 20px auto 0;
    }
</style>

<div class="details-card">
    <div class="details-header">
        <h2>Detalhes do Aluno</h2>
        <p class="text-muted small">Informações cadastradas</p>
    </div>

    <dl class="row details-list">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
        <dd class="col-sm-8">@Model.DataNascimento.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Avaliacao)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Avaliacao)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ativo)</dt>
        <dd class="col-sm-8">
            @if (Model.Ativo)
            {
                <span class="badge bg-success">Ativo</span>
            }
            else
            {
                <span class="badge bg-danger">Inativo</span>
            }
        </dd>
    </dl>

    <a asp-action="Index" class="btn btn-outline-primary btn-back">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>
